extends ./layouts/index

block contenido 
   main(class="container mt-5")
        div(class="row")
            h1(class="mt-5 text-center")  #{nombrePagina}

            main(class="container mt-5")
                div(class="row proximos-viajes")
                    each viaje in viajes 
                        div(class="col-md-6 col-lg-4 mb-4")
                            div(class="card")
                                img(class="card-img-top" src=`img/destinos_${viaje.imagen}.jpg`, alt="Destino")
                                div(class="card-body")
                                    h2 #{viaje.titulo}
                                    p 
                                        svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                            path(d='M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z')
                                            path(d='M16 3l0 4')
                                            path(d='M8 3l0 4')
                                            path(d='M4 11l16 0')
                                            path(d='M8 15h2v2h-2z')
                                        | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                                    p 
                                        svg.icon.icon-tabler.icon-tabler-user-square(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                            path(d='M9 10a3 3 0 1 0 6 0a3 3 0 0 0 -6 0')
                                            path(d='M6 21v-1a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v1')
                                            path(d='M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z')

                                        | #{viaje.disponibles} Disponibles

                                    p #{viaje.descripcion.substr(0,100)} ...

                                    a(href=`viajes/${viaje.slug}`, class="btn btn-success btn-block") Mas Informacion 